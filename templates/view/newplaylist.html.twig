{% extends "base.html.twig" %}

{% block content %}

    <div class="text-center mt-4 pt-2 pb-4">
        <h1 class="h1-size">Playlist</h1>
    </div>
    <div class="text-center col-6 offset-3 border">
        {% form_theme form 'bootstrap_4_layout.html.twig' %}
        <br/>
        <p class="h4 mb-4">Créer une playlist</p>
        {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

            <div class="col">
                {{ form_row(form.title) }}
            </div>
            <div class="col">
                {{ form_row(form.description) }}
            </div>
            <div class="col">
            {{ form_row(form.send, { 'label': 'Créer','attr': {'class': 'btn btn-info btn-block'} }) }}
            </div>
        {{ form_end(form) }}
    </div>

{% endblock %}