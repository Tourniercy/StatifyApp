{% extends "base.html.twig" %}

{% block content %}

        <div class="text-center mt-4 pt-2 pb-4">
            <h1 class="h1-size">Top Tracks</h1>
        </div>
        <div class="container wide">
            <div class="row">
                {% set id = 0 %}
                {% for track in toptracks.items %}
                    <div class="col-6 col-sm-6 col-md-4 col-lg-4 col-xl-2 card-margin">
                        <div class="card card-cascade wider reverse hover-card" name="{{ id }}">
                            <div class="view view-cascade overlay card-height">
                                <img class="card-img-top" src="{{ track.album.images[0].url}}">
                                <a href="{{track.external_urls.spotify}}"><div class="mask rgba-white-slight waves-effect waves-light"></div></a>
                            </div>
                            <div class="card-body card-body-cascade bottom-card" id="hover-card-{{ id }}">
                                <div class="row">
                                    <div class="col-9">
                                        <h5 class="mb-1 card-main">{{  track.name }}</h5>
                                        <p class="text-muted mb-0 card-sub">
                                            {{ track.artists[0].name }}
                                        </p>
                                    </div>
                                    {% if devices|length > 0 and active%}
                                        <div class="col-3">
                                            <i class="fas fa-2x fa-play-circle" data-track="{{track.uri}}" data-url="{{ (path('play')) }}"></i>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <span class="badge badge-pill badge-primary left-badge">{{ track.album.name}}</span>
                            {#<span class="badge badge-pill badge-danger right-badge"><i class="fas fa-chevron-down mr-2"></i>1</span>#}
                        </div>
                    </div>
                    {% set id = id + 1 %}
                {% endfor %}
            </div>
            </div>
{% endblock %}