{% extends "base.html.twig" %}

{% block content %}

    <div class="text-center mt-4 pt-2 pb-4">
        <h1 class="h1-size">My playlists</h1>
    </div>
    <div class="container wide">
        <div class="row">
            <img src="" style="height: 82px"/>
            <a href=""> </a>
            {% set id = 0 %}
            {% for playlist in myplaylists.items %}
                <div class="col-6 col-sm-6 col-md-4 col-lg-4 col-xl-2 card-margin">
                    <div class="card card-cascade wider reverse hover-card" name="{{ id }}">
                        <div class="view view-cascade overlay card-height">
                            <img class="card-img-top" src="{{ playlist.images[0].url}}">
                            <a href="{{playlist.external_urls.spotify}}"><div class="mask rgba-white-slight waves-effect waves-light"></div></a>
                        </div>
                        <div class="card-body card-body-cascade bottom-card" id="hover-card-{{ id }}">
                            <h5 class="mb-1 card-main">{{ playlist.name|u.truncate(18, '...') }}</h5>
                            <p class="text-muted mb-0 card-sub">
{#                                {{ track.artists[0].name }}#}
                            </p>
                        </div>
{#                        <span class="badge badge-pill badge-primary left-badge">{{ track.album.name}}</span>#}
                        {% if playlist.owner.id == me.id %}<span class="badge badge-pill badge-primary right-badge edit-playlist" style="cursor: pointer" data-idplaylist="{{ url('playlistEdit', {id: playlist.id}) }}"><i class="fas fa-pen"></i></span>{% endif %}
                    </div>
                </div>
                {% set id = id + 1 %}
            {% endfor %}
        </div>
    </div>
    <pre><code>
    {{ dump(myplaylists) }}
  </code></pre>
{% endblock %}